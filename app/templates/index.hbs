<!-- Content Section -->
<div class="col-sm-12">
    <section class="filters-container">
      <span class="location">
        <span class="filter-text">Show me breweries in</span>
        {{#power-select
          options=locationsList
          searchEnabled=false
          selected=locationFilter
          onchange=(action "updateLocationFilter")
        as |location|
        }}
          {{location}}
        {{/power-select}}
      </span>
      <span class="day">
        <span class="filter-text">open</span>
        {{#power-select
          options=daysList
          searchEnabled=false
          selected=dayFilter
          onchange=(action "updateDayFilter")
        as |day|
        }}
          {{day.name}}
        {{/power-select}}
      </span>
      {{!-- <span class="hour">
        <span class="filter-text">at</span>
        {{#power-select
          options=hoursList
          searchEnabled=false
          selected=hourFilter
          onchange=(action "updateHourFilter")
        as |hour|
        }}
          {{hour.name}}
        {{/power-select}}
      </span> --}}
    </section>
    <section class="results-count">
      <p class="italic">{{filteredBreweries.length}} breweries</p>
    </section>
    <section class="brewery-section">
      <div class="brewery-list">
        {{#each filteredBreweries as |brewery|}}
           {{brewery-card brewery=brewery}}
        {{/each}}
      </div>
    </section>
</div>
